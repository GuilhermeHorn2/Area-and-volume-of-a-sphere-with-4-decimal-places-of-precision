package project1;

import java.util.Random;
import java.util.Scanner;

public class strt {

	public static void main(String[] args) {
		// Area and volume of a sphere |
		System.out.println("Enter the radius of the sphere:");
		Scanner sc = new Scanner(System.in);
		String scnd = sc.next();
        int r = Integer.parseInt(scnd);
		System.out.printf("VOL: %.4f",vol(r));
		System.out.println();
		System.out.printf("AREA: %.4f",area(r));
		
		
		
	}	
	public static Double vol(int r){
		//using the radius calculate the volume of a sphere
		return (4/3)*Math.pow(r,3)*3.1415;
	}
	public static Double area(int r){
		//using the radius calculate the area of a sphere
		return 4*Math.pow(r,2)*3.1415;
	}
	}
	

